<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" onMouseClicked="#onTaskSelected" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" prefHeight="80.0" prefWidth="142.0" style="-fx-border-color: #82B366; -fx-background-color: #D5E8D4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.TaskView.SingleTaskViewController">
   <children>
      <Label fx:id="taskHeaderLabel" text="taskName">
         <font>
            <Font name="System Bold" />
         </font>
      </Label>
      <Label fx:id="taskDescLabel" prefHeight="62.0" prefWidth="148.0" text="taskDescription" wrapText="true">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
