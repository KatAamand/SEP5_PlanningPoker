<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<VBox prefHeight="275.0" prefWidth="375.0" style="-fx-border-color: #82B366; -fx-background-color: #D5E8D4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.TaskView.AddTaskViewController">
    <children>
      <TextField fx:id="textFieldTaskHeader" onKeyPressed="#validateData" promptText="Enter task header/name" style="-fx-background-color: #E5FAE4;" />
      <Line endX="130.0" startX="-200.0" strokeMiterLimit="5.0" strokeWidth="0.5" />
      <TextArea fx:id="textAreaTaskDescription" onKeyPressed="#validateData" prefHeight="200.0" prefWidth="200.0" promptText="Enter task description" style="-fx-background-color: #E5FAE4;" />
      <HBox alignment="BASELINE_CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onCancelPressed" text="Annuller">
               <HBox.margin>
                  <Insets right="200.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#onSavePressed" text="Gem" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
