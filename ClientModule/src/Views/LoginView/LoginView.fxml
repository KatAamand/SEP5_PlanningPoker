<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.LoginView.LoginViewController">
   <children>
      <HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #D5E8D4;">
         <children>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <TextField fx:id="usernameTextField" promptText="Brugernavn" />
                  <Label fx:id="usernameErrorLabel" textFill="#b52b2b">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <TextField fx:id="passwordTextField" promptText="Adgangskode" />
                  <Label fx:id="passwordErrorLabel" textFill="#b52b2b">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonPressed" prefWidth="100.0" style="-fx-background-color: #fff; -fx-border-color: #ccc;" text="Login">
               <HBox.margin>
                  <Insets bottom="20.0" />
               </HBox.margin></Button>
            <Button fx:id="createUserButton" mnemonicParsing="false" onAction="#onCreateUserButtonPressed" prefWidth="100.0" style="-fx-background-color: #fff; -fx-border-color: #ccc;" text="Opret bruger">
               <HBox.margin>
                  <Insets bottom="20.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </children>
</VBox>
