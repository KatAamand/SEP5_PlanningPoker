<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #D5E8D4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.MainView.MainViewController">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="50.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" spacing="20.0">
                     <children>
                        <Label text="Klar til at starte en ny planningPoker? Klik her">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="createPlanningPokerButton" mnemonicParsing="false" onAction="#onCreatePlanningPokerPressed" prefWidth="100.0" style="-fx-background-color: #fff; -fx-border-color: #ccc;" text="Opret planningPoker" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="67.0" prefWidth="500.0" spacing="20.0">
                     <children>
                        <Label text="Vil du deltage i en planningPoker? ">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="planningPokerIdTextField" alignment="CENTER_RIGHT" promptText="PlanningPoker id" />
                        <Button fx:id="connectToPlanningPokerButton" mnemonicParsing="false" onAction="#onConnectToPlanningPokerPressed" prefWidth="100.0" style="-fx-background-color: #fff; -fx-border-color: #ccc;" text="Tilslut planningPoker" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
