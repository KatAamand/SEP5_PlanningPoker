<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" style="-fx-background-color: #D5E8D4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.LoginView.LoginViewController">
   <children>
      <Label text="PlanningPoker">
         <font>
            <Font name="Open Sans Regular" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <Label text="NÃ¸jagtige estimeringer, bedre resultater">
         <font>
            <Font name="Open Sans Italic" size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="132.0" prefWidth="600.0" spacing="10.0">
         <children>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <TextField fx:id="usernameTextField" promptText="Brugernavn" style="-fx-border-color: #222;" />
                  <Label fx:id="usernameErrorLabel" textFill="#b52b2b">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <TextField fx:id="passwordTextField" promptText="Adgangskode" style="-fx-border-color: #222;" />
                  <Label fx:id="passwordErrorLabel" textFill="#b52b2b">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#onLoginButtonPressed" prefWidth="100.0" style="-fx-background-color: #fff; -fx-border-color: #222;" text="Login">
               <HBox.margin>
                  <Insets bottom="20.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button fx:id="createUserButton" mnemonicParsing="false" onAction="#onCreateUserButtonPressed" prefWidth="100.0" style="-fx-background-color: #fff; -fx-border-color: #222;" text="Opret bruger">
               <HBox.margin>
                  <Insets bottom="20.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="80.0" left="20.0" right="20.0" top="80.0" />
   </padding>
</VBox>
