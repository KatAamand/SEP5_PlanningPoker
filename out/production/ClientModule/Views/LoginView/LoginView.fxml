<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.LoginView.LoginViewController">
   <children>
      <HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #D5E8D4;">
         <children>
            <TextField fx:id="usernameTextField" promptText="Brugernavn" />
            <TextField fx:id="passwordTextField" promptText="Adgangskode" />
            <Button onAction="#onLoginButtonPressed" fx:id="loginButton" mnemonicParsing="false" prefWidth="100.0" style="-fx-background-color: #fff; -fx-border-color: #ccc;" text="Login" />
            <Button onAction="#onCreateUserButtonPressed" fx:id="createUserButton" mnemonicParsing="false" prefWidth="100.0" style="-fx-background-color: #fff; -fx-border-color: #ccc;" text="Opret bruger" />
         </children>
      </HBox>
   </children>
</VBox>
